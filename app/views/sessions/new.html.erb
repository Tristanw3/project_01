<div class="box">
  <h1>Login</h1>
  <%= form_tag '/login', method: :post do %>
  <div>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
    <%= submit_tag "Submit" %>
    <%= flash[:warning] %>
    
  <%end%>

  <a href="/signup">Sign Up!</a>
</div>